<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:my="urn:import:org.wte4j.ui.client.templates.contextmenu"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:with field='labels' type="org.wte4j.ui.client.Labels" />	
	<ui:style>
		.icon{
			padding-right: 1em;
		}
	</ui:style>
	<b.gwt:FlowPanel>
		<b:LinkedGroup marginBottom="0" marginTop="0" marginLeft="0" marginRight="0" paddingBottom="0" paddingTop="0" paddingLeft="0" paddingRight="0">

			<b:LinkedGroupItem ui:field="downloadAction" >
				<b:Icon type="DOWNLOAD" size="LARGE" fixedWidth="true" addStyleNames="{style.icon}" />
				<b.html:Text text="{labels.downloadTemplate}" />
			</b:LinkedGroupItem>

			<b:LinkedGroupItem ui:field="updateAction">
				<b:Icon type="UPLOAD" size="LARGE" fixedWidth="true" addStyleNames="{style.icon}"/>
				<b.html:Text text="{labels.updateTemplate}" />
			</b:LinkedGroupItem>

			<b:LinkedGroupItem ui:field="lockAction">
				<b:Icon type="LOCK" size="LARGE" fixedWidth="true" addStyleNames="{style.icon}"/>
				<b.html:Text text="{labels.lockTemplate}" />
			</b:LinkedGroupItem>

			<b:LinkedGroupItem ui:field="unlockAction">
				<b:Icon type="UNLOCK" size="LARGE" fixedWidth="true" addStyleNames="{style.icon}"/>
				<b.html:Text text="{labels.unlockTemplate}" />
			</b:LinkedGroupItem>
			
			<b:LinkedGroupItem ui:field="deleteAction">
				<b:Icon type="REMOVE" size="LARGE" fixedWidth="true" addStyleNames="{style.icon}"/>
				<b.html:Text text="{labels.deleteTemplate}" />
			</b:LinkedGroupItem>
			
		</b:LinkedGroup>

	</b.gwt:FlowPanel>
</ui:UiBinder> 