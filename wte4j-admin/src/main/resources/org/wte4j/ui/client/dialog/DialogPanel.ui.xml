<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt" xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
	.buttonColumn {
		text-align: left;
	}
	
	.button {
		margin-right: 5px;
	}
	</ui:style>

	<b:Container fluid="true">
		<b:Row>
			<b:Column size="XS_1">
				<b:Icon type="INFO" ui:field="icon" size="TIMES4" />
			</b:Column>
			<b:Column size="XS_10" offset="XS_1">
				<b.gwt:FlowPanel ui:field="contentPanel" />
			</b:Column>
		</b:Row>
		<b:Row>
			<b:Column size="XS_10" offset="XS_2" addStyleNames="{style.buttonColumn}">
				<b:Button ui:field="okButton" text="OK" visible="false"
					addStyleNames="{style.button}" />
				<b:Button ui:field="cancelButton" text="Cancel"
					addStyleNames="{style.button}" visible="false" />
			</b:Column>

		</b:Row>
	</b:Container>
</ui:UiBinder> 